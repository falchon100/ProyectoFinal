
    
    <link rel="stylesheet" href="/css/base.css">
    <div class="container">
                    {{#if status }}
                                <div class="alert alert-danger" role="alert">{{status}}</div>
                    {{/if}}  
        <div class="row justify-content-center mt-4">
            <div class="col-md-6">
                <div class="card p-4">
            {{#if statusSuccess}}
            <div class="alert alert-success" role="alert">
                 {{statusSuccess}}      
            </div>
            {{/if}}
            {{#if message}}
            <div class="alert alert-success" role="alert">
                 {{message}}      
            </div>
            {{/if}}
                    <h2 class="text-center mb-4">Iniciar sesión</h2>
                    <form method="post" action="/api/sessions/login" role="form" autocomplete="off">
                        <div class="form-group my-2">
                            <label for="loginUsername">Usuario</label>
                            <input type="text" class="form-control" name="email" id="loginUsername" placeholder="Ingrese su nombre de usuario" required>
                        </div>
                        <div class="form-group">
                            <label for="loginPassword">Contraseña</label>
                            <input type="password" class="form-control" name="password" id="loginPassword" placeholder="Ingrese su contraseña" required>
                        </div>
                        <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block  my-2">Iniciar sesión</button>
                    <a href="/" class="btn btn-primary text-decoration-none">volver</a>     
                    <a href="/api/sessions/github" class="btn btn-primary text-decoration-none"> Ingresar con Github  </a>
                    <a  onclick="location.href=`/api/email/sendEmail`" class="btn btn-primary" >Cambiar contraseña</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
